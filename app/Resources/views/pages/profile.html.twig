{% extends 'base.html.twig' %}

{% block content %}
    <div id="app">
    <div class="row outer-box">
        <div class="col-12">
            <div class="card">

                <div class="card-body">
                    <div class="card-title mb-4">
                        <div class="d-flex justify-content-start">
                            <div class="image-container">
                                <img src="http://placehold.it/150x150" id="imgProfile" style="width: 150px; height: 150px" class="img-thumbnail" />
                            </div>
                            <div class="userData ml-3">
                                <h2 class="d-block" style="font-size: 1.5rem; font-weight: bold"><a href="javascript:void(0);">{{user.username}}</a></h2>
                                <h6 class="d-block">{{ puzzlesSolved }} Puzzles solved</h6>
                             </div>
                            <div class="ml-auto">
                                <input type="button" class="btn btn-primary d-none" id="btnDiscard" value="Discard Changes" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div>
                                <b-tabs content-class="mt-3">
                                    <b-tab title="First" active>
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item"><b>Username</b>: {{ user.username }}</li>
                                            <li class="list-group-item"><b>Email</b>: {{ user.email }}</li>
                                        </ul>
                                    </b-tab>
                                    <b-tab title="Second">
                                        <h4>User ranking history</h4>
                                        <line-chart-container> </line-chart-container>
                                    </b-tab>
                                </b-tabs>
                            </div>


                        </div>
                    </div>


                </div>

            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block footer %}


{% endblock %}

		{% block stylesheets %}
			<link rel="stylesheet" type="text/css" href="{{ asset('css/custom-profile.css') }}" />
		{% endblock %}


		{% block javascripts %}
            {{ parent() }}

            <script src="{{asset('bundles/fosjsrouting/js/router.min.js') }}"></script>
            <script src="{{path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>

            {{ encore_entry_script_tags('jq') }}
            {{ encore_entry_script_tags('profile') }}
		{% endblock %}